{
  "name": "orchidui",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "npm run dev --prefix packages/@orchidui-vue",
    "dev-playground": "vite",
    "dev-docs": "npm run dev --prefix docs",
    "build-docs": "npm run build --prefix docs",
    "build-production": "vite build",
    "build": "npm run build --prefix packages/@orchidui-vue && npm run build-docs && npm run build-production",
    "reinstall": "npm remove @orchidui/vue && npm i @orchidui/vue",
    "reinstall-icons": "npm remove @orchidui/icons && npm i @orchidui/icons",
    "postinstall": "(cd packages/@orchidui-vue && npm install) && (cd docs && npm install)",
    "preview": "npm run build && vite preview",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix packages",
    "format": "prettier .  --write"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@orchidui/icons": "^0.0.3",
    "@orchidui/vue": "^0.0.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwind": "^4.0.0",
    "vue": "^3.3.4",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-vue": "^9.17.0",
    "@vue/eslint-config-prettier": "^8.0.0"
  },
  "devDependencies": {
    "eslint-config-prettier": "^9.0.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.5"
  }
}
