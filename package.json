{
  "name": "orchid",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "dev-docs": "npm run dev --prefix docs",
    "dev-playground": "vite",
    "preview": "npm run build && vite preview",
    "build-orchidui": "npm run build --prefix packages/@orchidui-vue",
    "build-docs": "npm run build --prefix docs",
    "build-playground": "vite build",
    "build": "npm run build-orchidui && npm run build-docs && npm run build-playground",
    "build-storybook": "storybook build -o dist/storybook",
    "postinstall": "(cd packages/@orchidui-vue && npm install) && (cd packages/@orchidui-icons && npm install) && (cd packages/@orchidui-form && npm install) && (cd docs && npm install)",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix packages",
    "format": "prettier .  --write",
    "reinstall": "npm remove @orchidui/vue && npm i @orchidui/vue && npm run reinstall-icons",
    "reinstall-icons": "npm remove @orchidui/icons && npm i @orchidui/icons"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@headlessui/vue": "^1.7.16",
    "@orchidui/icons": "^0.0.6",
    "@orchidui/vue": "./packages/@orchidui-vue",
    "@vue/eslint-config-prettier": "^8.0.0",
    "autoprefixer": "^10.4.16",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-vue": "^9.17.0",
    "postcss": "^8.4.31",
    "tailwind": "^4.0.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@headlessui/vue": "^1.7.16",
    "@storybook/addon-essentials": "^7.4.5",
    "@storybook/addon-interactions": "^7.4.5",
    "@storybook/addon-links": "^7.4.5",
    "@storybook/blocks": "^7.4.5",
    "@storybook/builder-vite": "^7.4.5",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/vue3": "^7.4.5",
    "@storybook/vue3-vite": "^7.4.5",
    "@vitejs/plugin-vue": "^4.2.3",
    "autoprefixer": "^10.4.16",
    "eslint-config-prettier": "^9.0.0",
    "fast-glob": "^3.3.1",
    "postcss": "^8.4.30",
    "storybook": "^7.4.5",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.5"
  }
}
